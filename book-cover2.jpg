<svg width="300" height="400" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bookGradient2" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1e3a5f;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#2c5282;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="titleGradient2" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ffd700;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#ffed4e;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="maskGradient" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#ffffff;stop-opacity:0.3" />
      <stop offset="100%" style="stop-color:#ffffff;stop-opacity:0.1" />
    </radialGradient>
  </defs>
  
  <!-- Background -->
  <rect width="300" height="400" fill="url(#bookGradient2)"/>
  
  <!-- Decorative border -->
  <rect x="10" y="10" width="280" height="380" fill="none" stroke="#ffd700" stroke-width="2" opacity="0.6"/>
  <rect x="20" y="20" width="260" height="360" fill="none" stroke="#ffd700" stroke-width="1" opacity="0.4"/>
  
  <!-- Theater masks -->
  <g transform="translate(150, 80)">
    <!-- Comedy mask -->
    <g transform="translate(-40, 0)">
      <ellipse cx="0" cy="0" rx="25" ry="30" fill="url(#maskGradient)" stroke="#ffd700" stroke-width="2"/>
      <ellipse cx="-8" cy="-8" rx="3" ry="4" fill="#1e3a5f"/>
      <ellipse cx="8" cy="-8" rx="3" ry="4" fill="#1e3a5f"/>
      <path d="M -12 8 Q 0 18 12 8" fill="none" stroke="#1e3a5f" stroke-width="2"/>
    </g>
    
    <!-- Tragedy mask -->
    <g transform="translate(40, 0)">
      <ellipse cx="0" cy="0" rx="25" ry="30" fill="url(#maskGradient)" stroke="#ffd700" stroke-width="2"/>
      <ellipse cx="-8" cy="-8" rx="3" ry="4" fill="#1e3a5f"/>
      <ellipse cx="8" cy="-8" rx="3" ry="4" fill="#1e3a5f"/>
      <path d="M -12 15 Q 0 5 12 15" fill="none" stroke="#1e3a5f" stroke-width="2"/>
    </g>
  </g>
  
  <!-- Main title -->
  <text x="150" y="180" text-anchor="middle" font-family="serif" font-size="22" font-weight="bold" fill="url(#titleGradient2)">
    CHINESE MODERN
  </text>
  <text x="150" y="210" text-anchor="middle" font-family="serif" font-size="22" font-weight="bold" fill="url(#titleGradient2)">
    DRAMA STUDIES
  </text>
  
  <!-- Chinese subtitle -->
  <text x="150" y="240" text-anchor="middle" font-family="serif" font-size="16" fill="#b8d4f0">
    中国现代戏剧研究
  </text>
  
  <!-- Subtitle -->
  <text x="150" y="270" text-anchor="middle" font-family="serif" font-size="14" fill="#9bb8d4">
    Contemporary Theatrical Research
  </text>
  <text x="150" y="290" text-anchor="middle" font-family="serif" font-size="14" fill="#9bb8d4">
    and Critical Analysis
  </text>
  
  <!-- Decorative line -->
  <line x1="60" y1="310" x2="240" y2="310" stroke="#ffd700" stroke-width="1" opacity="0.6"/>
  
  <!-- Academic symbols -->
  <g transform="translate(150, 340)">
    <circle cx="-60" cy="0" r="12" fill="none" stroke="#ffd700" stroke-width="1" opacity="0.5"/>
    <text x="-60" y="4" text-anchor="middle" font-family="serif" font-size="16" fill="#ffd700" opacity="0.7">書</text>
    
    <circle cx="0" cy="0" r="12" fill="none" stroke="#ffd700" stroke-width="1" opacity="0.5"/>
    <text x="0" y="4" text-anchor="middle" font-family="serif" font-size="16" fill="#ffd700" opacity="0.7">劇</text>
    
    <circle cx="60" cy="0" r="12" fill="none" stroke="#ffd700" stroke-width="1" opacity="0.5"/>
    <text x="60" y="4" text-anchor="middle" font-family="serif" font-size="16" fill="#ffd700" opacity="0.7">研</text>
  </g>
  
  <!-- Author area -->
  <text x="150" y="375" text-anchor="middle" font-family="serif" font-size="12" fill="#9bb8d4">
    Academic Collection
  </text>
</svg>