<svg width="300" height="400" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bookGradient3" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#2d3748;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#4a5568;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="titleGradient3" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#e2e8f0;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#cbd5e0;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="accentGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f6ad55;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#ed8936;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="300" height="400" fill="url(#bookGradient3)"/>
  
  <!-- Academic border -->
  <rect x="15" y="15" width="270" height="370" fill="none" stroke="#e2e8f0" stroke-width="1" opacity="0.3"/>
  <rect x="25" y="25" width="250" height="350" fill="none" stroke="#f6ad55" stroke-width="1" opacity="0.5"/>
  
  <!-- Header section -->
  <rect x="40" y="50" width="220" height="80" fill="url(#accentGradient)" opacity="0.1" rx="5"/>
  
  <!-- Main title -->
  <text x="150" y="80" text-anchor="middle" font-family="serif" font-size="20" font-weight="bold" fill="url(#titleGradient3)">
    PERFORMANCE
  </text>
  <text x="150" y="105" text-anchor="middle" font-family="serif" font-size="20" font-weight="bold" fill="url(#titleGradient3)">
    THEORY &amp; PRACTICE
  </text>
  
  <!-- Chinese title -->
  <text x="150" y="140" text-anchor="middle" font-family="serif" font-size="16" fill="#f6ad55">
    表演理论与实践
  </text>
  
  <!-- Academic symbols -->
  <g transform="translate(150, 180)">
    <!-- Book icon -->
    <g transform="translate(-50, 0)">
      <rect x="-15" y="-10" width="30" height="20" fill="none" stroke="#e2e8f0" stroke-width="2" rx="2"/>
      <line x1="-15" y1="-5" x2="15" y2="-5" stroke="#e2e8f0" stroke-width="1"/>
      <line x1="-15" y1="0" x2="15" y2="0" stroke="#e2e8f0" stroke-width="1"/>
      <line x1="-15" y1="5" x2="15" y2="5" stroke="#e2e8f0" stroke-width="1"/>
    </g>
    
    <!-- Theater symbol -->
    <g transform="translate(0, 0)">
      <circle cx="0" cy="0" r="18" fill="none" stroke="#f6ad55" stroke-width="2"/>
      <path d="M -10 -5 L 10 -5 L 5 5 L -5 5 Z" fill="none" stroke="#f6ad55" stroke-width="1.5"/>
      <circle cx="0" cy="0" r="3" fill="#f6ad55"/>
    </g>
    
    <!-- Research icon -->
    <g transform="translate(50, 0)">
      <circle cx="0" cy="-5" r="8" fill="none" stroke="#e2e8f0" stroke-width="2"/>
      <line x1="6" y1="1" x2="12" y2="7" stroke="#e2e8f0" stroke-width="2"/>
    </g>
  </g>
  
  <!-- Subtitle -->
  <text x="150" y="240" text-anchor="middle" font-family="serif" font-size="14" fill="#cbd5e0">
    Theoretical Framework for
  </text>
  <text x="150" y="260" text-anchor="middle" font-family="serif" font-size="14" fill="#cbd5e0">
    Contemporary Dramatic Arts
  </text>
  
  <!-- Chinese subtitle -->
  <text x="150" y="285" text-anchor="middle" font-family="serif" font-size="12" fill="#a0aec0">
    戏剧表演艺术理论研究与实践指导
  </text>
  
  <!-- Decorative elements -->
  <g transform="translate(150, 320)">
    <line x1="-80" y1="0" x2="-20" y2="0" stroke="#f6ad55" stroke-width="2" opacity="0.6"/>
    <circle cx="0" cy="0" r="5" fill="#f6ad55" opacity="0.6"/>
    <line x1="20" y1="0" x2="80" y2="0" stroke="#f6ad55" stroke-width="2" opacity="0.6"/>
  </g>
  
  <!-- Academic classification -->
  <rect x="60" y="340" width="180" height="30" fill="url(#accentGradient)" opacity="0.1" rx="3"/>
  <text x="150" y="355" text-anchor="middle" font-family="serif" font-size="12" font-weight="bold" fill="#f6ad55">
    ACADEMIC MONOGRAPH
  </text>
  <text x="150" y="370" text-anchor="middle" font-family="serif" font-size="10" fill="#cbd5e0">
    学术专著
  </text>
</svg>