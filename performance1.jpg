<svg width="350" height="300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="stage" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#2F1B14;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#8B4513;stop-opacity:0.8" />
    </linearGradient>
    <radialGradient id="spotlight" cx="50%" cy="30%" r="60%">
      <stop offset="0%" style="stop-color:#FFD700;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#8B4513;stop-opacity:0.3" />
    </radialGradient>
  </defs>
  
  <!-- 舞台背景 -->
  <rect width="350" height="300" fill="url(#stage)"/>
  
  <!-- 聚光灯效果 -->
  <ellipse cx="175" cy="100" rx="120" ry="80" fill="url(#spotlight)"/>
  
  <!-- 表演者身影 -->
  <g transform="translate(175, 150)">
    <!-- 头部 -->
    <circle cx="0" cy="-40" r="15" fill="#DEB887"/>
    
    <!-- 传统头饰 -->
    <path d="M-12 -50 Q0 -55 12 -50 Q8 -45 0 -42 Q-8 -45 -12 -50" fill="#8B4513"/>
    <circle cx="-8" cy="-48" r="2" fill="#FFD700"/>
    <circle cx="8" cy="-48" r="2" fill="#FFD700"/>
    
    <!-- 身体 -->
    <ellipse cx="0" cy="-10" rx="20" ry="35" fill="#CD853F"/>
    
    <!-- 传统服装装饰 -->
    <path d="M-15 -25 Q0 -30 15 -25 Q10 -20 0 -18 Q-10 -20 -15 -25" fill="#8B0000"/>
    <circle cx="0" cy="-15" r="3" fill="#FFD700"/>
    
    <!-- 袖子（表演动作） -->
    <ellipse cx="-25" cy="-5" rx="15" ry="25" fill="#CD853F" transform="rotate(-20)"/>
    <ellipse cx="25" cy="-5" rx="15" ry="25" fill="#CD853F" transform="rotate(30)"/>
    
    <!-- 下裙摆 -->
    <path d="M-20 20 Q0 30 20 20 Q15 40 0 45 Q-15 40 -20 20" fill="#8B0000"/>
    
    <!-- 装饰花纹 -->
    <circle cx="-10" cy="25" r="2" fill="#FFD700"/>
    <circle cx="10" cy="25" r="2" fill="#FFD700"/>
    <circle cx="0" cy="30" r="2" fill="#FFD700"/>
  </g>
  
  <!-- 舞台地面反光 -->
  <ellipse cx="175" cy="280" rx="80" ry="15" fill="#8B4513" opacity="0.3"/>
  
  <!-- 标题文字 -->
  <text x="175" y="280" text-anchor="middle" font-family="serif" font-size="14" fill="#FFD700" opacity="0.9">传统戏曲表演</text>
</svg>